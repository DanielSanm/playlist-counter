{
    "manifest_version": 3,
    "name": "Playlist counter",
    "version": "1.0",
    "description": "Calculates the total duration of playlists on YouTube",
    "permissions": [
        "activeTab",
        "webNavigation"
    ],
    "host_permissions": [
        "https://www.youtube.com/*"
    ],
    "content_scripts": [
        {
            "js": [
                "scripts/content.js"
            ],
            "matches": [
                "https://www.youtube.com/*"
            ]
        }
    ]
}